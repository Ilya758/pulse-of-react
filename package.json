{
  "name": "pulse-of-react",
  "private": true,
  "version": "1.20.1",
  "type": "module",
  "homepage": "https://pulse-of-react.netlify.app",
  "scripts": {
    "dev": "vite --open",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "biome check --write . --error-on-warnings",
    "lint:staged": "biome check --staged --error-on-warnings --write .",
    "build-preview": "vite build && vite preview",
    "version:major": "npx standard-version --release-as major && git push --follow-tags",
    "version:minor": "npx standard-version --release-as minor && git push --follow-tags",
    "version:patch": "npx standard-version --release-as patch && git push --follow-tags",
    "prepare": "husky"
  },
  "dependencies": {
    "@mantine/code-highlight": "^8.0.0",
    "@mantine/core": "^8.0.0",
    "@mantine/hooks": "^8.0.0",
    "@mantine/notifications": "^8.0.2",
    "@tabler/icons": "^3.31.0",
    "@tabler/icons-react": "^3.31.0",
    "framer-motion": "^12.23.7",
    "highlight.js": "^11.11.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.28.2",
    "vite-plugin-svgr": "^4.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@types/react-router": "^5.1.20",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json,css,html}": [
      "yarn lint:staged"
    ]
  }
}
